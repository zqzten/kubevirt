---
apiVersion: v1
kind: Service
metadata:
  name: nfs-server
  namespace: {{.Namespace}}
  labels:
    kubevirt.io: "nfs-server"
spec:
  clusterIP: 10.96.42.42
  ports:
    - port: 111
      targetPort: 111
      protocol: UDP
      name: nfs1-udp
    - port: 111
      targetPort: 111
      protocol: TCP
      name: nfs1-tcp
    - port: 2049
      targetPort: 2049
      protocol: UDP
      name: nfs2-udp
    - port: 2049
      targetPort: 2049
      protocol: TCP
      name: nfs2-tcp
    - port: 32765
      targetPort: 32765
      protocol: UDP
      name: nfs3
    - port: 32766
      targetPort: 32766
      protocol: UDP
      name: nfs4
    - port: 32767
      targetPort: 32767
      protocol: UDP
      name: nfs5
  selector:
    kubevirt.io: nfs-server
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: nfs-server
  namespace: {{.Namespace}}
  labels:
    kubevirt.io: "nfs-server"
spec:
  replicas: 1
  template:
    metadata:
      labels:
        kubevirt.io: nfs-server
    spec:
      serviceAccountName: kubevirt-testing
      containers:
        - name: nfs-server
          image: {{.DockerPrefix}}/nfs-server:{{.DockerTag}}
          imagePullPolicy: IfNotPresent
          volumeMounts:
            - name: nfs-data
              mountPath: /images
          securityContext:
            privileged: true
          ports:
            - containerPort: 111
              protocol: "UDP"
            - containerPort: 111
              protocol: "TCP"
            - containerPort: 2049
              protocol: "UDP"
            - containerPort: 2049
              protocol: "TCP"
            - containerPort: 32765
              protocol: "UDP"
            - containerPort: 32766
              protocol: "UDP"
            - containerPort: 32767
              protocol: "UDP"
      volumes:
        - name: nfs-data
          hostPath:
            path: /tmp/hostImages
            type: Directory
