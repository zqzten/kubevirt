apiVersion: extensions/v1beta1
kind: DaemonSet
metadata:
  name: virt-handler
spec:
  template:
    metadata:
      name: virt-handler
      labels:
        daemon: virt-handler
    spec:
      volumes:
      - name: var-run-virt
        hostPath:
          path: /var/run/libvirt
      containers:
      - name: virt-handler
        image: {{ docker_prefix }}/virt-handler:{{ docker_tag }}
        imagePullPolicy: IfNotPresent
        securityContext:
          privileged: true
        volumeMounts:
        - name: var-run-virt
          mountPath: /var/run/libvirt
        env:
          - name: HOSTNAME_OVERRIDE
            valueFrom:
              fieldRef:
                fieldPath: spec.nodeName
