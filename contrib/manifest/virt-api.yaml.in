apiVersion: v1
kind: Pod
metadata:
  name: virt-api
  labels:
    app: virt-api
spec:
  containers:
  - name: virt-api
    image: {{ docker_prefix }}/virt-api:{{ docker_tag }}
    imagePullPolicy: IfNotPresent
    command:
        - "/virt-api"
        - "--port"
        - "8183"
    ports:
      - containerPort: 8183
        name: "virt-api"
        protocol: "TCP"
